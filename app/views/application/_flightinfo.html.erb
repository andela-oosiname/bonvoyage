<div class="col s6">
  <div class="thick-border">
    <div class="row center"><span> Flight Information </span></div>
    <div class="row"><span class="bold-text">Flight Number:</span><span class="right"><%= @flight.id %></span></div>
    <div class="row"><span class="bold-text">Airline:</span><span class="right"><%= @flight.airline %></span></div>
    <div class="row"><span class="bold-text">From:  </span><span class="right"><%= @flight.departure.name %></span></div>
    <div class="row"><span class="bold-text">To:</span><span class="right"><%= @flight.arrival.name %></span></div>
    <div class="row"><span class="bold-text">Date:  </span><span class="right"><%= @flight.departure_date %></span></div>
    <div class="row"><span class="bold-text">Take-off:  </span><span class="right"><%= @flight.departure_time %></span></div>
    <div class="row"><span class="bold-text">Economy:</span><span class="right">&#x20A6;<%= @flight.economy %></span></div>
    <div class="row"><span class="bold-text">Business:  </span><span class="right">&#x20A6;<%= @flight.business %></span></div>
    <div class="row"><span class="bold-text">First:  </span><span class="right">&#x20A6;<%= @flight.first %></span></div>
  </div>
</div>
<div class="col s6">
  <div class="thick-border">
    <div class="row center"><span> Booking Information </span></div>
    <div class="row"><span class="bold-text">No of passengers</span><span class="right"><%= @passengers %></span></div>
    <div class="row"><span class="bold-text">Economy  class:</span><span class="right">2</span></div>
    <div class="row"><span class="bold-text">Business class:  </span><span class="right">3</span></div>
    <div class="row"><span class="bold-text">First class:  </span><span class="right">1</span></div>
  </div>
</div>
