<%= render partial: 'header' %>
<div class="container box">
  <div class="row">
    <div class="col-sm-6">
      <div class="row">
      <%= render partial: 'flightinfo' %>
      </div>
    </div>
    <div class="col-sm-6">
      <%= form_for @booking do |f| %>
        <%= f.hidden_field :user_id, :value => @user %>
        <%= f.hidden_field :flight_id, :value => @flight.id %>
        <%= f.hidden_field :payment_status, :value => false %>
        <%= f.hidden_field :seats, :value => @seats %>

        <%= f.fields_for :passengers do |passengers_form| %>
        <div class="passenger-fields">
          <div class="row div-pad">
            <div class="col-sm-6">
              <%= passengers_form.text_field :first_name, class: "form-control",  placeholder: "Firstname" %>
            </div>
            <div class="col-sm-6 ">
              <%= passengers_form.text_field :last_name, class: "form-control",  placeholder: "Lastname" %>
            </div>
          </div>
          <div class="row div-pad">
            <div class="col-sm-6 ">
              <%= passengers_form.email_field :email, class: "form-control",  placeholder: "Email" %>
            </div>
            <div class="col-sm-4">
              <%= passengers_form.text_field :phone, class: "form-control",  placeholder: "Phone" %>
            </div>
            <div class="col-sm-2">
              <%= passengers_form.select(:cabin, ["Economy", "Business", "First"], {}, { :class => 'my-select' }) %>
            </div>
          </div>
        </div>
        <% end %>
          <div class="row div-pad"> <%= f.submit "Book", class: "btn btn-success"%></div>
        <% end %>
    </div>
  </div>
</div>
