<%= render partial: 'header' %>
<div class="main-div">
  <div class="row bg-image">
  </div>
  <div class="flights">
    <h3> BOOKING CONFIRMATION </h3>
      <div class="row">
      <div class="col-sm-8">
        <div class="thank-you">
          <div class="row">
            <div class="col-sm-1">
               <i class="fa fa-thumbs-o-up fa-2x"></i>
            </div>
            <div class="col-sm-10" >
              <span class="big-white-text">THANK YOU. YOUR BOOKING ORDER IS CONFIRMED NOW.</span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-1">
            &nbsp;
            </div>
            <div class="col-sm-10" >
              <span>A confirmation email has been sent to your provided email address</span>
            </div>
          </div>
        </div>

        <div class="my-table">
        <% @booking.passengers.each do |passenger| %>
            <div class="flight-pad">
            </div>
          <table class="table table-striped table-bordered">
              <tr>
                <td class="grey-text">Name</td>
                <td><%= passenger.name %></td>
              </tr>
              <tr>
                <td class="grey-text">Phone</td>
                <td><%= passenger.phone %></td>
              </tr>
              <tr>
                <td class="grey-text">Cabin</td>
                <td><%= passenger.cabin %></td>
              </tr>
              <tr>
                <td class="grey-text">Cost</td>
                <td><%= passenger.cost %></td>
              </tr>
          </table>
        <% end %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="booking-info">
        <h5>BOOKING DETAILS </h5>
            <p>Ref <span><%= @booking.ref %></span></p>
            <p>Airline <span><%= @booking.flight.airline %></span></p>
            <p>Flight Number <span><%= @booking.flight.id %> </span></p>
            <p>Seats <span><%= @booking.seats %></span></p>
            <p>Total Cost <span>&#x20A6;<%= @booking.cost %></span></p>
        </div>
      </div>
    </div>
  </div>
</div>

